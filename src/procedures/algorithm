#include<bits/stdc++.h>
using namespace std;

struct Node {
    int key;
    Node* left, *right;
};

Node* newNode(int key) {
    Node* node = new Node;
    node->key = key;
    node->left = node->right = NULL;
    return (node);
}

int editDist(Node* tree1, Node* tree2) {
    if (tree1 == NULL && tree2 == NULL)
        return 0;

    if (tree1 == NULL)
        return editDist(tree1, tree2->left) + editDist(tree1, tree2->right) + 1;

    if (tree2 == NULL)
        return editDist(tree1->left, tree2) + editDist(tree1->right, tree2) + 1;

    return min(min(editDist(tree1->left, tree2->left) + editDist(tree1->right, tree2->right),
                   editDist(tree1, tree2->left) + editDist(tree1, tree2->right) + 1),
               editDist(tree1->left, tree2) + editDist(tree1->right, tree2) + 1);
}

int main() {
    Node* tree1 = newNode(1);
    tree1->left = newNode(2);
    tree1->right = newNode(3);
    tree1->left->left = newNode(4);
    tree1->left->right = newNode(5);

    Node* tree2 = newNode(1);
    tree2->left = newNode(2);
    tree2->right = newNode(3);
    tree2->left->left = newNode(4);

    cout << "Distancia de edición entre los dos árboles: " << editDist(tree1, tree2);

    return 0;
}
